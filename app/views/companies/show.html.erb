<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<%= container_3_tag @company.calculated_badges, rows: {cols: {class: 'text-center'}} do |badge| %>
  <h2><%= badge.badge_cnt %> <%= badge.name %></h2>
  <div class="symbol">
    <%= fa_icon badge.fa_symbol %>
  </div>
<% end %>

